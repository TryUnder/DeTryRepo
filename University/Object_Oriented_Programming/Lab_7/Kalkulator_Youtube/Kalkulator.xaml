<Window x:Class="Lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab7"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="ResultText" ><Run Language="pl-pl"/></TextBlock>
        <TextBlock x:Name="CurrentOperationText" ></TextBlock>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button x:Name="Button1" Click="Button_Click" Grid.Row="0" Grid.Column="0" Content="1"/>
            <Button x:Name="Button2" Click="Button_Click" Grid.Row="0" Grid.Column="1" Content="2"/>
            <Button x:Name="Button3" Click="Button_Click" Grid.Row="0" Grid.Column="2" Content="3"/>
            <Button x:Name="Button4" Click="Button_Click" Grid.Row="1" Grid.Column="0" Content="4"/>
            <Button x:Name="Button5" Click="Button_Click" Grid.Row="1" Grid.Column="1" Content="5"/>
            <Button x:Name="Button6" Click="Button_Click" Grid.Row="1" Grid.Column="2" Content="6"/>
            <Button x:Name="Button7" Click="Button_Click" Grid.Row="2" Grid.Column="0" Content="7"> </Button>
            <Button x:Name="Button8" Click="Button_Click" Grid.Row="2" Grid.Column="1" Content="8"/>
            <Button x:Name="Button9" Click="Button_Click" Grid.Row="2" Grid.Column="2" Content="9"> </Button>
        
        </Grid>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="Button0" Click="Button_Click" Content="0" Width="133"/>
            <Button x:Name="ButtonAdd" Click="ButtonAdd_Click" Content="+" Width="133"/>
            <Button x:Name="ButtonMinus" Click="ButtonMinus_Click" Content="-" Width="133"/>
            <Button x:Name="ButtonMultiply" Click="ButtonMultiply_Click" Content="*" Width="133"/>
            <Button x:Name="ButtonDivide" Click="ButtonDivide_Click" Content="/" Width="133"/>
            <Button x:Name="ButtonResult" Click="ButtonResult_Click" Content="=" Width="133"/>

        </StackPanel>
    </StackPanel>


</Window>
